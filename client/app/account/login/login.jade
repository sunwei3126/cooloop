.container.content
  .row
    .col-sm-6
      form(name='loginForm')
        alert(ng-repeat='alert in alerts', type='{{alert.type}}', close='closeAlert($index)') {{alert.msg}}
        .form-group(ng-class="{'has-error': hasError(loginForm.username)}")
          label.control-label(for='username') Username or Email:
          input#username.form-control(type='text', name='username', ng-model='user.username', required='', server-error='')
          span.help-block(ng-show="showError(loginForm.username, 'required')") This field is required
          span.help-block(ng-show="showError(loginForm.username, 'server')") {{errfor.username}}
        .form-group(ng-class="{'has-error': hasError(loginForm.password)}")
          label.control-label(for='password') Password:
          input#password.form-control(type='password', name='password', ng-model='user.password', required='', server-error='')
          span.help-block(ng-show="showError(loginForm.password, 'required')") This field is required
          span.help-block(ng-show="showError(loginForm.password, 'server')") {{errfor.password}}
        .form-group
          button.btn.btn-primary.btn-login(type='button', ng-disabled='!canSave(loginForm)', ng-click='submit()') Sign In
          // <button type="button" class="btn btn-primary btn-login">Sign In</button>
          a.btn.btn-link(href='/login/forgot') Forgot your password?
  
